{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "jest": true,
    "es6": true
  },
  "globals": {
    "err": true,
    "req": true,
    "res": true,
    "next": true,
    "__API_URL__": true,
    "getState": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "classes": true,
    "jsx": true,
    "templateStrings": true,
    "spread": true,
    "modules": true,
    "experimentalObjectRestSpread": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "no-console": "off",
    "indent": [ "error", 2 ],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": ["error", "always-multiline"],
    "semi": [ "error", "always" ],
    "linebreak-style": ["error", "unix"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": 0
  },
  "plugins": [
    "react"
  ]
}